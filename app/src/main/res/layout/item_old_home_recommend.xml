<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_295"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/iv_bgdge"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#60202020"
                android:gravity="center"
                android:text="已下架"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#ff282828"
            android:textSize="@dimen/sp_13" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_12"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_discount_price_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/iv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center"
                android:textColor="#fffdddab"
                android:textSize="@dimen/sp_10" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_minPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff202020"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/tv_minMarketPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:textColor="#ffaaaaaa"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_go_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_12"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_go_card"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_18"
            android:background="@drawable/bt_add_sjop_selector" />

    </RelativeLayout>


</RelativeLayout>

